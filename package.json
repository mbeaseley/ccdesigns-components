{
  "name": "ccdesigns-components",
  "version": "1.0.0",
  "description": "CCDesigns Component Library",
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "author": "Ionic Team",
  "license": "MIT",
  "homepage": "https://github.com/ionic-team/stencil",
  "engines": {
    "node": ">=8.10"
  },
  "files": [
    "dist/",
    "www/"
  ],
  "scripts": {
    "build": "stencil build",
    "dev": "stencil build --dev --watch --serve",
    "prod": "stencil build --prod --watch --serve",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "lint.fix": "tslint --fix --project tsconfig.json --config tslint.json",
    "start": "npm run dev",
    "test": "jest --coverage --coverageDirectory=coverage/jest --env=jsdom",
    "test.watch": "jest --watch"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "@stencil/helmet": "^0.3.0-2"
  },
  "devDependencies": {
    "@stencil/core": "~0.16.2",
    "@stencil/sass": "^0.1.1",
    "@stencil/utils": "^0.0.5",
    "@types/jest": "^23.3.12",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "jest": "^23.6.0",
    "pre-commit": "^1.2.2",
    "tslint": "^5.12.1",
    "tslint-ionic-rules": "0.0.21",
    "typescript": "^3.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mbeaseley/ccdesigns-components.git"
  },
  "bugs": {
    "url": "https://github.com/ionic-team/stencil"
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/@stencil/(?!helmet)"
    ],
    "transform": {
      "^.+\\.jsx$": "babel-jest",
      "^.+\\.js$": "babel-jest",
      "^.+\\.(ts|tsx|js|jsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "testEnvironment": "node"
  }
}
