{
  "name": "ccdesign-components",
  "version": "1.8.2",
  "description": "CCDesigns Component Library",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "author": "Ionic Team",
  "license": "MIT",
  "homepage": "https://github.com/ionic-team/stencil",
  "engines": {
    "node": ">=8.10"
  },
  "files": [
    "dist/",
    "www/"
  ],
  "scripts": {
    "build": "stencil build",
    "build.prod": "stencil build --prod",
    "dev": "stencil build --dev --watch --serve",
    "prod": "stencil build --prod --watch --serve",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "lint.fix": "tslint --fix --project tsconfig.json --config tslint.json",
    "test": "stencil test --spec",
    "test.watch": "stencil test --spec --watch",
    "test.e2e": "stencil test --e2e",
    "storybook": "start-storybook -p 9001 -c .storybook -s www",
    "build-storybook": "yarn build.prod && build-storybook -s public -c .storybook -o .out && ./scripts/move-storybook.sh",
    "deploy-storybook": "storybook-to-ghpages --out=.out"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "@polymer/polymer": "^3.3.0",
    "lit-html": "^1.1.1",
    "polymer-webpack-loader": "^2.0.3"
  },
  "devDependencies": {
    "@stencil/core": "^1.2.4",
    "@stencil/sass": "^1.0.1",
    "@stencil/utils": "^0.0.5",
    "@storybook/addon-actions": "^5.1.10",
    "@storybook/addon-backgrounds": "^5.1.10",
    "@storybook/addon-knobs": "^5.1.10",
    "@storybook/addon-links": "^5.1.10",
    "@storybook/addon-notes": "^5.1.10",
    "@storybook/addon-options": "^5.1.10",
    "@storybook/addon-storysource": "^5.1.10",
    "@storybook/addon-viewport": "^5.1.10",
    "@storybook/polymer": "^5.1.10",
    "@storybook/storybook-deployer": "^2.8.1",
    "@types/jest": "24.0.17",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.8.0",
    "babel-loader": "7.1.5",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "pre-commit": "^1.2.2",
    "tslint": "^5.18.0",
    "tslint-ionic-rules": "0.0.21",
    "typescript": "^3.5.3"
  },
  "resolutions": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mbeaseley/ccdesigns-components.git"
  },
  "bugs": {
    "url": "https://github.com/ionic-team/stencil"
  },
  "storybook-deployer": {
    "gitUsername": "mbeaseley",
    "gitEmail": "m.t.beaseley@gmail.com",
    "commitMessage": "Deploy Storybook"
  },
  "jest": {
    "preset": "@stencil/core/testing"
  }
}
