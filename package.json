{
  "name": "ccdesign-components",
  "version": "1.7.0",
  "description": "CCDesigns Component Library",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "author": "Ionic Team",
  "license": "MIT",
  "homepage": "https://github.com/ionic-team/stencil",
  "engines": {
    "node": ">=8.10"
  },
  "files": [
    "dist/",
    "www/"
  ],
  "scripts": {
    "build": "stencil build",
    "build.prod": "stencil build --prod",
    "dev": "stencil build --dev --watch --serve",
    "prod": "stencil build --prod --watch --serve",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "lint.fix": "tslint --fix --project tsconfig.json --config tslint.json",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --watch",
    "test.e2e": "stencil test --e2e",
    "storybook": "start-storybook -p 9001 -c .storybook -s www",
    "build-storybook": "yarn build && build-storybook -s public -c .storybook -o .out && ./scripts/move-storybook.sh",
    "deploy-storybook": "storybook-to-ghpages --out=.out"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@polymer/polymer": "^3.2.0",
    "@stencil/helmet": "^0.3.0-2",
    "lit-html": "^1.0.0",
    "polymer-webpack-loader": "^2.0.3"
  },
  "devDependencies": {
    "@stencil/core": "^1.0.3",
    "@stencil/sass": "^1.0.0",
    "@stencil/utils": "^0.0.5",
    "@storybook/addon-actions": "^5.1.7",
    "@storybook/addon-backgrounds": "^5.1.7",
    "@storybook/addon-knobs": "^5.1.7",
    "@storybook/addon-links": "^5.1.7",
    "@storybook/addon-notes": "^5.1.7",
    "@storybook/addon-options": "^5.1.7",
    "@storybook/addon-storysource": "^5.1.7",
    "@storybook/addon-viewport": "^5.1.7",
    "@storybook/polymer": "^5.1.7",
    "@storybook/storybook-deployer": "^2.8.1",
    "@types/jest": "23.3.14",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.1.0",
    "babel-loader": "7.1.5",
    "jest": "24.8.0",
    "jest-cli": "24.8.0",
    "pre-commit": "^1.2.2",
    "tslint": "^5.17.0",
    "tslint-ionic-rules": "0.0.21",
    "typescript": "^3.3.3"
  },
  "resolutions": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mbeaseley/ccdesigns-components.git"
  },
  "bugs": {
    "url": "https://github.com/ionic-team/stencil"
  },
  "storybook-deployer": {
    "gitUsername": "mbeaseley",
    "gitEmail": "m.t.beaseley@gmail.com",
    "commitMessage": "Deploy Storybook"
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/@stencil/(?!helmet)"
    ],
    "transform": {
      "^.+\\.jsx$": "babel-jest",
      "^.+\\.js$": "babel-jest",
      "^.+\\.(ts|tsx|js|jsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "testEnvironment": "node"
  }
}
